<?xml version="1.0" encoding="utf-8" ?>
<extension version="3.9" type="plugin" group="content" method="upgrade">
	<name>PLG_CONTENT_EVENTLIST</name>
	<author>Ulrich Rueth</author>
	<authorEmail>code@rueth.info</authorEmail>
	<authorUrl>https://rueth.info</authorUrl>
	<creationDate>01.01.2019</creationDate>
	<copyright>Copyright (C) 2018-2019 Ulrich Rueth</copyright>
	<license>Code released under the [GNU GPL 3.0]
		(https://github.com/UlricusR/joomla-eventlist/blob/master/LICENSE) license.
	</license>
	<version>1.1.0</version>
	<description>PLG_CONTENT_EVENTLIST_DESC</description>
	
	<files>
		<filename plugin="eventlist">eventlist.php</filename>
		<folder>language</folder>
		<folder>sql</folder>
		<folder>extras</folder>
		<folder>models</folder>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="plg_eventlist_timeformat"
					type="list"
					required="true"
					default="H:i"
					label="PLG_EVENTLIST_FIELD_TIMEFORMAT"
					description="PLG_EVENTLIST_FIELD_TIMEFORMAT_DESC">
					<option value="H:i">PLG_EVENTLIST_FIELD_TIMEFORMAT_24_LONG</option>
					<option value="h:i A">PLG_EVENTLIST_FIELD_TIMEFORMAT_12_LONG</option>
					<option value="G:i">PLG_EVENTLIST_FIELD_TIMEFORMAT_24_SHORT</option>
					<option value="g:i A">PLG_EVENTLIST_FIELD_TIMEFORMAT_12_SHORT</option>
					<option value="free">PLG_EVENTLIST_FIELD_TIMEFORMAT_FREE</option>
				</field>
				<field
					name="plg_eventlist_timeformat_free"
					type="text"
					label="PLG_EVENTLIST_FIELD_FREE"
					description="PLG_EVENTLIST_FIELD_FREE_DESC"
					showon="plg_eventlist_timeformat:free"/>
				<field
					name="plg_eventlist_displaystyle"
					type="list"
					default="title"
					label="PLG_EVENTLIST_FIELD_DISPLAYSTYLE"
					description="PLG_EVENTLIST_FIELD_DISPLAYSTYLE_DESC">
					<option value="plain">PLG_EVENTLIST_FIELD_DISPLAYSTYLE_PLAIN</option>
					<option value="title">PLG_EVENTLIST_FIELD_DISPLAYSTYLE_TITLE</option>
				</field>
				<field
					name="plg_eventlist_displaytitle"
					type="text"
					default="Info"
					hint="Info"
					showon="plg_eventlist_displaystyle:title"
					label="PLG_EVENTLIST_FIELD_DISPLAYTITLE"
					description="PLG_EVENTLIST_FIELD_DISPLAYTITLE_DESC"/>
			</fieldset>
		</fields>
	</config>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	
	<update>
		<schemas>
			<schemapath type="mysql">sql/update</schemapath>
		</schemas>
	</update>
</extension>